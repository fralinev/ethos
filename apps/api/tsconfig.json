{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ethos/shared": ["../../packages/shared/dist"]
    }
    
  },
  "include": ["src/**/*.ts"],
  
  "references": [
    { "path": "../../packages/shared" }
  ]
}